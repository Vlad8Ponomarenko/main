{
  "compilerOptions": {
    "target": "es2016",                          // Цільова версія ECMAScript
    "module": "commonjs",                        // Система модулів
    "lib": ["es2016", "dom"],                    // Бібліотеки для підтримки сучасних методів
    "outDir": "./dist",                           // Директорія для скомпільованих файлів
    "rootDir": "./",                              // Коренева директорія з вихідними файлами
    "strict": true,                               // Увімкнення строгого режиму
    "esModuleInterop": true,                      // Полегшує інтеграцію з CommonJS модулями
    "forceConsistentCasingInFileNames": true,     // Консистентний регістр у іменах файлів
    "skipLibCheck": true                          // Пропуск перевірки типів у бібліотеках
  },
  "include": ["**/*.ts"],                         // Включення всіх .ts файлів у проекті
  "exclude": ["dist"]                             // Виключення папки dist з компіляції
}
